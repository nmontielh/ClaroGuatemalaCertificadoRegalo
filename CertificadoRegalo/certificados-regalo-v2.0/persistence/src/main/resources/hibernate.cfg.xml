<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<!-- Archivo de configuracion del hibernate -->

		<!-- propiedades del dbms -->
		<property name="hibernate.connection.driver_class">org.postgis.DriverWrapper</property>
		<!-- <property name="hibernate.connection.driver_class">org.postgresql.Driver</property> -->
		<!-- Dialect Postgis (Implica tambien PostgreSQLDialect) -->
		<property name="hibernate.dialect">org.hibernate.spatial.dialect.postgis.PostgisDialect</property>
		<!-- <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property> -->

		<!-- propiedades del hibernate -->

		<property name="hibernate.show_sql">false</property>
		<property name="hibernate.format_sql">false</property>
		<property name="hibernate.use_sql_comments">false</property>
		<property name="hibernate.generate_statistics">false</property>
		<property name="hibernate.auto_close_session">true</property>

		<property name="hibernate.max_fetch_depth">3</property>
		<property name="hibernate.default_batch_fetch_size">8</property>
		<property name="hibernate.bytecode.use_reflection_optimizer">true</property>
		<property name="hibernate.search.autoregister_listeners">false</property>

		<!-- Configuraciones de infinispan stand alone -->

		<property name="hibernate.cache.use_second_level_cache">true</property>
		<property name="hibernate.cache.use_query_cache">true</property>

		<!-- Configuraciones standalone para pruebas unitarias -->


		<property name="hibernate.transaction.jta.platform">org.hibernate.service.jta.platform.internal.JBossStandAloneJtaPlatform</property>
		<property name="hibernate.cache.region.factory_class">org.hibernate.cache.infinispan.InfinispanRegionFactory</property>


	</session-factory>

</hibernate-configuration>
